{
    "env": {
      "browser": true,
      "es6": true
    },

    "globals": {
      "Cafe": false,
      "cafes": false,
      "scores": false,
      "work": false,
      "space": false, 
      "outlets": false, 
      "atmosphere": false, 
      "menu": false,
      "quality": false,
      "variety": false, 
      "price": false,
      "comm": false,
      "kids": false,
      "local": false,
      "neighborhood": false,
      "categories": false,
      "choice": false, 
      "suggestion": false,
      "NewCafe": false,
      "newCafes": false,
      "suggestList": false
    },

    //  To learn more about the rules: https://eslint.org/docs/rules/
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["warn", "single"],
      "indent": ["error", 4],
      "space-infix-ops": ["error", {"int32Hint": false}],
      "no-trailing-spaces": "warn",
      "no-mixed-spaces-and-tabs": "warn",
  
      "no-undef": "error",
      "no-undefined": "error",
      "no-unused-vars": "error",
      
      "no-var": "warn",
      "prefer-const": "warn"
    }
  }
  